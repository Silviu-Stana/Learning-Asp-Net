@using ViewsExample.Models
@{
    string appTitle = "Asp.Net Core App";
    Person person = new() { Name = "John", DateOfBirth = null, PersonGender = Gender.Male };
    // Convert.ToDateTime("2000-07-01")
}

<!DOCTYPE html public xmlns="http://www.w3.org/1999/xhtml">
<html>
<head>
    <title>@appTitle</title>
    <meta charset="utf-8" />
</head>
<body>
    <h1>Welcome</h1>
    <h2>Hello @person.Name</h2>
    @if (person.DateOfBirth.HasValue)
    {
        double age = Math.Round((DateTime.Now - person.DateOfBirth).Value.TotalDays / 365.25);
        <h3>@age years old</h3>
    }
    else
    {
        <h3>Date of birth is unknown</h3>
    }

    @switch (person.PersonGender)
    {
        case Gender.Male:
            <p>Nov 19 is men's day</p>
            break;
        case Gender.Female:
            <p>Mar 8 is women's day'</p>
            break;
    }

</body>
</html>