@model PersonResponse
@{
    ViewBag.Title = "Delete Person";
}

<a href="~/persons/index">Back to Persons List</a>
<h2>Delete Person</h2>
<h3>Are you sure you want to delete this person?</h3>

<div class="container w-50">
    <form asp-controller="Persons" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        @* Name *@
        <div class="form-field flex">
            <div class="w-25"><label asp-for="Name" class="form-label pt">Person Name</label></div>
            <div class="flex-1">
                <input asp-for="Name" class="form-input" disabled />
                <span class="text-red" asp-validation-for="Name"></span>
            </div>
        </div>

        @* Email *@
        <div class="form-field flex">
            <div class="w-25"><label asp-for="Email" class="form-label pt">Email</label></div>
            <div class="flex-1">
                <input type="email" asp-for="Email" class="form-input" disabled />
                <span class="text-red" asp-validation-for="Email"></span>
            </div>
        </div>


        @* Submit *@
        <div class="form-field flex">
            <div class="w-25"></div>
            <div class="flex-1">
                <button class="button button-red-back" src="">Delete</button>

                @if (ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml">@error</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </form>
</div>
